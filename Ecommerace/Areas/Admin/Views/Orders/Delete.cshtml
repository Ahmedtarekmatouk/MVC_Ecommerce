@model Ecommerace.Models.Order

@{
    ViewBag.Title = "Delete Order";
}

<h2 class="text-center">Delete Order</h2>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="form-container">
                <h3 class="text-center">Are you sure you want to delete this order?</h3>

                <dl class="row">
                    <dt class="col-sm-3">Client ID:</dt>
@*                     <dd class="col-sm-9">@Model.ClientId</dd>
 *@
                    <dt class="col-sm-3">Total Price:</dt>
                    <dd class="col-sm-9">@Model.TotalPrice</dd>

                    <dt class="col-sm-3">Status:</dt>
                    <dd class="col-sm-9">@Model.Status</dd>

                    <dt class="col-sm-3">Shipping Address:</dt>
                    <dd class="col-sm-9">@Model.ShippingAddress</dd>

                    <dt class="col-sm-3">Created At:</dt>
                    <dd class="col-sm-9">@Model.CreatedAt?.ToString("g")</dd>

                    <dt class="col-sm-3">Updated At:</dt>
                    <dd class="col-sm-9">@Model.UpdatedAt?.ToString("g")</dd>
                </dl>

                <form asp-area="Admin" asp-controller="Orders" asp-action="SaveDelete" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="text-center mt-3">
                        <button type="submit" class="btn btn-danger">Delete</button>
                        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
