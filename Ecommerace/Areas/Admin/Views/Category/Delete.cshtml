@model Ecommerace.Models.Category

@{
    ViewData["Title"] = "Delete Category";
}

<h1 class="text-center">Delete Category</h1>

<h3 class="text-center">Are you sure you want to delete this category?</h3>
<div class="text-center">
    <h4>@Model.Name</h4>
    <dl class="dl-horizontal">
        <dt>
            Name
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        
    </dl>

    <form asp-action="Delete" asp-route-id="@Model.Id">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-area="Admin" asp-action="Index" class="btn btn-secondary" >Back to List</a>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
